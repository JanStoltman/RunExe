<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="277">
    <Grid Margin="0,0,2,0">
        <TextBox x:Name="pathTBX" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="235" BorderThickness="5" >
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <Button x:Name="start_button" Content="Start" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Width="76" Click="button_Click"/>
        <Button x:Name="stop_button" Content="Stop" HorizontalAlignment="Left" Margin="169,44,0,0" VerticalAlignment="Top" Width="76" Click="stop_button_Click"/>
        <ScrollViewer x:Name="scroll_view" HorizontalAlignment="Left" Height="212" Margin="10,98,0,0" VerticalAlignment="Top" Width="247">
            <StackPanel x:Name="stack_panel">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
